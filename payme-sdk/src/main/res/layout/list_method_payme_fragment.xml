<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="3dp"
        app:cardCornerRadius="1pt"
        app:cardBackgroundColor="@color/emeraldGreenTwo"
        android:id="@+id/dot"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_height="16dp"></androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_select_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="@font/barlow_medium"
        android:text="@string/select_method_payment"
        android:textAlignment="textEnd"
        android:textColor="@color/blackSeven"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/dot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ListView
        app:layout_constraintTop_toBottomOf="@id/title_select_method"
        android:listSelector="@android:color/transparent"
        android:id="@+id/recipe_list_view"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:choiceMode="none"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:nestedScrollingEnabled="false"
       />
    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/loadingListMethodPayment"
        android:visibility="visible"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipe_list_view"
        android:text="@string/enter_the_cardholder_full_name"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>