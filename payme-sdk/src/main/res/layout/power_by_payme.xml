<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/paleGrey"
    android:paddingHorizontal="16dp"
    android:paddingBottom="15dp"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">
        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Powered by "
            android:id="@+id/title_bottom_left"
            android:layout_marginLeft="16dp"
            android:textSize="10dp"
            android:fontFamily="@font/main_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/nb60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="54dp"
            android:id="@+id/imageLogoPayme"
            app:layout_constraintLeft_toRightOf="@id/title_bottom_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_logo_payme_horizontal"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:fontFamily="@font/main_regular"
            android:textColor="@color/nb60"
            app:layout_constraintRight_toLeftOf="@id/imageLogoPci"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Bảo mật với chứng chỉ "
            />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/imageLogoPci"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_logo_pci"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>