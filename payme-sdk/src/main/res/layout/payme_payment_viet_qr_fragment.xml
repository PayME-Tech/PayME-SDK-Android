<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/txtNoteMoneyTransfer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:fontFamily="@font/main_semibold"
    android:paddingHorizontal="15dp"
    android:text="@string/scan_viet_qr"
    android:textAlignment="center"
    android:textColor="@color/blackSeven"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@id/line1" />

  <ImageView
    android:id="@+id/imageQR"
    android:layout_width="172dp"
    android:layout_height="172dp"
    android:layout_gravity="center"
    android:layout_marginVertical="15dp"
    android:background="@drawable/background_border_qrcode"
    android:padding="1dp"
    android:scaleType="fitXY" />

  <TextView
    android:id="@+id/txt_download"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/main_semibold"
    android:paddingHorizontal="15dp"
    android:paddingVertical="6dp"
    android:text="@string/download_viet_qr"
    android:textAlignment="center"
    android:textColor="@color/blackSeven"
    android:textSize="12sp" />

  <TextView
    android:id="@+id/txtMoneyTransfer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/main_semibold"
    android:paddingHorizontal="15dp"
    android:text="@string/viet_qr_hint"
    android:textAlignment="center"
    android:textColor="@color/blackSeven"
    android:textSize="12sp" />

  <LinearLayout
    android:id="@+id/bankNumberContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp">

    <TextView
      android:id="@+id/txtBankNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/main_bold"
      android:text="aa98230r7 238r7298347203847320"
      android:textAlignment="center"
      android:textSize="16sp" />

    <ImageView
      android:id="@+id/iconCopy"
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:layout_marginLeft="8dp"
      android:src="@drawable/ic_copi2"
      />

  </LinearLayout>


  <TextView
    android:id="@+id/txtAccountName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:fontFamily="@font/main_bold"
    android:paddingHorizontal="15dp"
    android:text="SPORT_SPORT"
    android:textAlignment="center"
    android:textSize="16sp" />

  <TextView
    android:id="@+id/txtBankName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:fontFamily="@font/main_regular"
    android:paddingHorizontal="15dp"
    android:text="Ngân hàng Phương Đông - OCB"
    android:textAlignment="center"
    android:textColor="@color/blackSeven"
    android:textSize="16sp" />

  <LinearLayout
    android:id="@+id/contentContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/background_vietqr_content_transfer"
    android:paddingHorizontal="16dp">

    <TextView
      android:id="@+id/txtContentLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/main_regular"
      android:text="Nội dung bắt buộc"
      android:textAlignment="center"
      android:textSize="16sp" />

    <TextView
      android:id="@+id/txtContent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/main_bold"
      android:text="TT QTY0IX4JRWXN"
      android:textAlignment="center"
      android:layout_marginLeft="12dp"
      android:textSize="16sp" />

    <ImageView
      android:id="@+id/iconCopyContent"
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:layout_marginLeft="8dp"
      android:src="@drawable/ic_copi2"
      />

  </LinearLayout>

</LinearLayout>