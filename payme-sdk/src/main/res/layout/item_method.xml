<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="12dp"
    android:paddingBottom="12dp"
    android:background="@android:color/transparent"
    android:layout_height="match_parent"
    >
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/paleGrey"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right"
                android:src="@drawable/iconwallet"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <ImageView
                    android:visibility="gone"

                    android:id="@+id/imageWallet"
                    android:src="@drawable/iconwallet"
                    android:layout_marginLeft="8dp"
                    android:layout_width="26dp"
                    android:layout_height="22dp">
                </ImageView>
                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:id="@+id/wrap_image_method"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardElevation="0dp"
                    app:contentPadding="6dp"
                    android:layout_marginLeft="8dp"
                    app:cardCornerRadius="28dp"
                    app:cardBackgroundColor="@color/white"
                    >
                    <ImageView
                        android:id="@+id/image"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/iconwallet"
                        android:layout_width="17dp"
                        android:layout_height="17dp"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@id/right"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="16dp"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/blackSix"
            android:text="TESST"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/title"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/barlow_medium"
            android:textSize="16dp"
            android:textColor="@color/brownishGrey"
            android:id="@+id/note_method"
        />
        <ImageView
            android:id="@+id/buttonNext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_baseline_navigate_next_24"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>