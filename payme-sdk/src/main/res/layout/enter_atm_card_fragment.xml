<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:paddingHorizontal="16dp"
    android:paddingTop="8dp">
    <!--        ButtonChange-->

    <TextView
        android:id="@+id/title_select_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/barlow_medium"
        android:text="@string/select_method_payment"
        android:textAlignment="textEnd"
        android:textColor="@color/steel"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/wrapButtonChangeMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/paleGrey"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_select_method">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonChangeMethod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">

            <ViewAnimator
                android:id="@+id/wrap_image_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/background_radius_with_boder_8dp"
                android:padding="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_atm" />
            </ViewAnimator>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/barlow_medium"
                android:text="@string/domestic_atm_card"
                android:textColor="@color/blackSix"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/wrap_image_method"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentButtonChangeMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_radius_with_boder_8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtChangeMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:text="@string/change"
                    android:textSize="13dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <vn.payme.sdk.component.InputTest
        android:id="@+id/inputCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/wrapButtonChangeMethod"
        app:pbInputType="number"
        app:pbMaxlength="21"
        app:pbTitle="@string/enter_number_card" />

    <vn.payme.sdk.component.InputTest
        android:id="@+id/inputCardHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputCardNumber"
        app:pbDigits="ABCDEFGHIJKLMNOPQRSTUVWXYZ "
        app:pbInputType="textFilter"
        app:pbMaxlength="50"
        app:pbTitle="@string/enter_the_cardholder_full_name" />

    <vn.payme.sdk.component.InputTest
        android:id="@+id/inputCardDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputCardHolder"
        app:pbHint="MM / YY"
        app:pbInputType="number"
        app:pbMaxlength="5"
        app:pbTitle="@string/release_date_mm_yy" />

    <vn.payme.sdk.component.Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputCardDate"
        app:pbText="@string/payment" />


</androidx.constraintlayout.widget.ConstraintLayout>

