<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="12dp"
    android:paddingBottom="12dp"
    android:background="@android:color/transparent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:background="@drawable/background_radius_with_boder"
        android:layout_height="wrap_content">
        <ViewAnimator
            android:id="@+id/wrap_image_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/background_radius_with_boder_4dp"
            >
            <ImageView
                android:id="@+id/image"
                android:minHeight="20dp"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:minWidth="20dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/iconwallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </ViewAnimator>
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@id/wrap_image_method"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="16dp"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/blackSix"
            android:text="TESST"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/title"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/barlow_medium"
            android:textSize="16dp"
            android:textColor="@color/brownishGrey"
            android:id="@+id/note_method"


        />
        <ImageView
            android:id="@+id/checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>